<!-- Contact Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content bg-dark text-light border-secondary">
      <div class="modal-header border-secondary">
        <h5 class="modal-title" id="contactModalLabel">
          <i class="fas fa-envelope me-2"></i>
          Get a Real Analysis
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      
      <div class="modal-body">
        <div class="text-center mb-4">
          <h6 class="text-warning mb-3">
            <i class="fas fa-exclamation-triangle me-2"></i>
            Our AI analysis was not good enough?
          </h6>
          <p class="text-muted">It happens! Try a real analysis made by us.</p>
        </div>
        
        <%= form_with url: contact_submissions_path, method: :post, local: true, class: "contact-form" do |f| %>
          <%= f.hidden_field :game_name, value: @game.name %>
          <%= f.hidden_field :game_slug, value: @game.slug %>
          
          <div class="mb-3">
            <label for="contact_email" class="form-label">Your Email</label>
            <%= f.email_field :email, 
                class: "form-control bg-dark text-light border-secondary", 
                placeholder: "your.email@example.com",
                required: true %>
          </div>
          
          <div class="mb-3">
            <label for="contact_game_name" class="form-label">Game Name</label>
            <%= f.text_field :game_name_display, 
                class: "form-control bg-dark text-light border-secondary", 
                value: @game.name,
                readonly: true %>
          </div>
          
          <div class="mb-3">
            <label for="contact_message" class="form-label">Message</label>
            <%= f.text_area :message, 
                class: "form-control bg-dark text-light border-secondary", 
                value: "I want a free review of my Steam Page",
                rows: 3,
                required: true %>
          </div>
          
          <div class="d-grid gap-2">
            <%= f.submit "Send Request", class: "btn btn-primary", onclick: "console.log('Form submitted!')" %>
            <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">
              Maybe Later
            </button>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.querySelector('.contact-form');
  if (form) {
    form.addEventListener('submit', function(e) {
      console.log('Form submit event triggered');
      console.log('Form action:', form.action);
      console.log('Form method:', form.method);
    });
  }
});
</script> 
<!-- Contact Modal -->
<div class="modal fade" id="contactModal" tabindex="-1" aria-labelledby="contactModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered">
    <div class="modal-content rounded-xl">
      <div class="modal-header">
        <h5 class="modal-title h5" id="contactModalLabel">
          ✉️ Need more help with your Steam page?
        </h5>
        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      
      <div class="modal-body px-4 py-3">
      <p class="mb-4">
        Did the AI review miss the mark?<br>
        Request a free custom Steam page review.
        </p>
        <p class="mb-4">
          <%= link_to "Check out our existing reviews here for more details.", "https://warp-meal-189.notion.site/Steam-Page-Reviews-21153330309f80669911c9ce0f711079", class: "text-white", target: "_blank" %>
        </p>
        
        <%= form_with url: contact_submissions_path, method: :post, local: true, class: "contact-form" do |f| %>
          <% if @game.present? %>
            <%= f.hidden_field :game_name, value: @game.name %>
            <%= f.hidden_field :game_slug, value: @game.slug %>
          <% end %>
          
          <div class="mb-3">
            <label for="contact_email" class="form-label">Email</label>
            <%= f.email_field :email, 
                class: "form-control", 
                placeholder: "your.email@example.com",
                required: true %>
          </div>
          
          <% if @game.present? %>
          <div class="mb-3">
            <label for="contact_game_name" class="form-label">Game Title</label>
            <%= f.text_field :game_name_display, 
                class: "form-control", 
                value: @game.name,
                readonly: true %>
          </div>
          <% end %>
          
          <div class="mb-3">
            <label for="contact_message" class="form-label">Message</label>
            <%= f.text_area :message, 
                class: "form-control", 
                value: "I want a free review of my Steam Page",
                rows: 3,
                required: true %>
          </div>
          
          <div class="d-grid">
            <%= f.submit "Request Review", class: "btn btn-primary" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
  const form = document.querySelector('.contact-form');
  if (form) {
    form.addEventListener('submit', function(e) {
      console.log('Form submit event triggered');
      console.log('Form action:', form.action);
      console.log('Form method:', form.method);
    });
  }
});
</script> 
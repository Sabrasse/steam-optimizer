<!-- app/views/pages/_tags_section.html.erb -->
<div class="steam-section">
  <div class="steam-section-header">
    Tags Analysis
  </div>
  <div class="steam-section-content">
    <div class="steam-comparison">
      <!-- Current Version -->
      <div class="steam-version">
        <div class="version-header current">
          Current Steam Page
        </div>
        <div class="version-content">
          <div class="content-block">
            <h6>Current Tags</h6>
            <% if tags_list.present? %>
              <p><%= tags_list.join(', ') %></p>
            <% else %>
              <p class="text-muted">No tags found</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- AI-Optimized Version -->
      <div class="steam-version">
        <div class="version-header optimized">
          Optimized Version
        </div>
        <div class="version-content">
          <div class="content-block">
            <h6>AI Recommendations</h6>
            <% if tags_list.present? %>
              <p>
                <i class="fas fa-check-circle"></i> Your tags look good! No major improvements needed.
              </p>
            <% else %>
              <p>
                <i class="fas fa-exclamation-circle"></i> No tags found. Consider adding relevant tags to improve discoverability.
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 
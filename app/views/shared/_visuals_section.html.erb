<!-- app/views/pages/_visuals_section.html.erb -->
<div class="steam-section">
  <div class="steam-section-header">
    Visuals Analysis
    <span class="analysis-score <%= visual_report['score'] == 'A' ? 'score-a' : 'score-b' %>">
      Score: <%= visual_report['score'] %>
    </span>
  </div>
  <div class="steam-section-content">
    <div class="steam-comparison">
      <!-- Current Version -->
      <div class="steam-version">
        <div class="version-header current">
          Current Steam Page
        </div>
        <div class="version-content">
          <div class="content-block">
            <h6>Screenshots</h6>
            <% if @game.screenshots.present? %>
              <p><%= @game.screenshots.size %> screenshots uploaded</p>
            <% else %>
              <p class="text-muted">No screenshots uploaded</p>
            <% end %>
          </div>

          <div class="content-block">
            <h6>Trailers</h6>
            <% if @game.movies.present? %>
              <p><%= @game.movies.size %> trailers uploaded</p>
            <% else %>
              <p class="text-muted">No trailers uploaded</p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- AI-Optimized Version -->
      <div class="steam-version">
        <div class="version-header optimized">
          Optimized Version
        </div>
        <div class="version-content">
          <div class="content-block">
            <h6>AI Recommendations</h6>
            <% if visual_report['issues'].present? && visual_report['issues'].any? %>
              <div class="content-with-copy">
                <div class="content">
                  <ul>
                    <% visual_report['issues'].each do |issue| %>
                      <li><%= issue.to_s %></li>
                    <% end %>
                  </ul>
                </div>
                <button class="copy-btn" onclick="copyToClipboard('<%= escape_javascript(visual_report['issues'].map { |i| "â€¢ #{i}" }.join("\n")) %>')">
                  <i class="fas fa-copy"></i>
                </button>
              </div>
            <% else %>
              <p>
                <i class="fas fa-check-circle"></i> Your visuals look good! No major improvements needed.
              </p>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div> 
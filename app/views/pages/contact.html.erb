<% content_for :head do %>
  <title>Contact Us - Polish My Game</title>
  <meta name="description" content="Get in touch with the Polish My Game team. We're here to help you optimize your Steam store page and improve your game's visibility.">
<% end %>

<div class="container py-5">
  <div class="row justify-content-center mt-4"">
    <div class="col-md-8">
      <header class="text-center mb-5">
        <h1 class="mb-4">Contact Us</h1>
        <p class="text-muted">
          Have feedback or want a free review of your Steam Page? We'd love to hear from you!
        </p>
      </header>

      <div class="row">
        <div class="col-12 mb-4">
          <div class="card h-100">
            <div class="card-body">
              <h3 class="card-title h5 mb-3">
                <i class="fas fa-envelope me-2"></i>
                Need more help?
              </h3>
              <p class="card-text text-muted mb-4">
                Send us an email and we'll get back to you as soon as possible.
              </p>
              
              <%= form_with url: contact_submissions_path, method: :post, local: true, class: "contact-form" do |f| %>
                <div class="mb-3">
                  <label for="contact_email" class="form-label">Your Email</label>
                  <%= f.email_field :email, 
                      class: "form-control bg-dark text-light border-secondary", 
                      placeholder: "your.email@example.com",
                      required: true %>
                </div>
                
                <div class="mb-3">
                  <label for="contact_message" class="form-label">Message</label>
                  <%= f.text_area :message, 
                      class: "form-control bg-dark text-light border-secondary", 
                      value: "I want a free review of my Steam Page",
                      rows: 3,
                      required: true %>
                </div>
                
                <div class="d-grid">
                  <%= f.submit "Send Message", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="row mt-4">
        <div class="col-12">
          <div class="card">
            <div class="card-body">
              <h3 class="card-title h5 mb-3">
                <i class="fas fa-info-circle me-2"></i>
                About Polish My Game
              </h3>
              <p class="card-text">
                Polish My Game is a free tool designed to help indie game developers optimize their Steam store pages. 
                Our AI-powered analysis provides actionable insights to improve visibility, increase wishlists, and boost sales.
              </p>
              <p class="card-text">
                Whether you're launching your first game or looking to improve an existing title, 
                we're here to help you succeed on Steam.
              </p>
            </div>
          </div>
        </div>
      </div>
  </div>
</div> 
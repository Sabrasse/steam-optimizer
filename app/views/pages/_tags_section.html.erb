<!-- app/views/pages/_tags_section.html.erb -->
<div class="card bg-dark text-light border-secondary mb-4">
  <div class="card-body">
    <h3 class="card-title">
      Tags &amp; Genres
      <span class="badge <%= tags_score == 'A' ? 'bg-success' : 'bg-warning' %>">
        Score: <%= tags_score %>
      </span>
    </h3>

    <div class="mb-3">
      <h5 class="text-primary">Tags detected:</h5>
      <% if tags_list.any? %>
        <div class="d-flex flex-wrap gap-2">
          <% tags_list.each do |tag| %>
            <span class="badge bg-secondary"><%= tag %></span>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted">(None)</p>
      <% end %>
    </div>

    <div class="alert <%= tags_score == 'A' ? 'alert-success' : 'alert-warning' %>">
      <i class="fas <%= tags_score == 'A' ? 'fa-check-circle' : 'fa-exclamation-circle' %>"></i>
      <%= tags_feedback %>
    </div>

    <% if tags_score != "A" %>
      <div class="mt-3">
        <i class="fas fa-lightbulb text-warning"></i>
        <strong>Recommendation:</strong> Think about adding more relevant tags/genres if possible. This helps players discover your game.
      </div>
    <% end %>
  </div>
</div> 
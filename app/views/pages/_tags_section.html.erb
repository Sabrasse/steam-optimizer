<!-- app/views/pages/_tags_section.html.erb -->
<div class="card bg-dark text-light border-secondary mb-4">
  <div class="card-body">
    <h3 class="card-title">
      Tags &amp; Genres
      <span class="badge <%= tags_score == 'A' ? 'bg-success' : 'bg-warning' %>">
        Score: <%= tags_score %>
      </span>
    </h3>

    <div class="content-section">
      <h5 class="text-primary">Current Tags</h5>
      <% if tags_list.any? %>
        <div class="d-flex flex-wrap gap-2 mb-3">
          <% tags_list.each do |tag| %>
            <span class="badge bg-secondary"><%= tag %></span>
          <% end %>
        </div>
      <% else %>
        <p class="text-muted mb-3">(None)</p>
      <% end %>

      <% if tags_score != "A" %>
        <div class="text-warning">
          <i class="fas fa-exclamation-circle"></i>
          <small><%= tags_feedback %></small>
        </div>
        <div class="mt-3">
          <i class="fas fa-lightbulb text-warning"></i>
          <strong>Recommendation:</strong> Think about adding more relevant tags/genres if possible. This helps players discover your game.
        </div>
      <% end %>
    </div>
  </div>
</div> 
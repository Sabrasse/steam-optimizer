<!-- app/views/pages/_tags_section.html.erb -->
<div class="card bg-dark text-light border-secondary mb-4">
  <div class="card-body">
    <h3 class="card-title">Tags Analysis</h3>

    <div class="content-section">
      <h5 class="text-primary">Current Tags</h5>
      
      <div class="mb-4">
        <p class="mb-2">
          <% if tags_list.present? %>
            <%= tags_list.join(', ') %>
          <% else %>
            <span class="text-muted">No tags found</span>
          <% end %>
        </p>
      </div>
    </div>

    <%# AI suggestions for improving tags %>
    <div class="mt-4">
      <h5 class="border-bottom border-secondary pb-2">AI Suggestions for Tag Improvements:</h5>
      <div class="card bg-darker text-light border-secondary">
        <div class="card-body">
          <% if tags_list.present? %>
            <p class="mb-0 text-success">
              <i class="fas fa-check-circle"></i> Your tags look good! No major improvements needed.
            </p>
          <% else %>
            <p class="mb-0 text-warning">
              <i class="fas fa-exclamation-circle"></i> No tags found. Consider adding relevant tags to improve discoverability.
            </p>
          <% end %>
        </div>
      </div>
      <small class="text-muted mt-2 d-block">
        <i class="fas fa-robot"></i> These suggestions are generated by AI based on your current tags.
      </small>
    </div>
  </div>
</div> 
<!-- app/views/pages/_visuals_section.html.erb -->
<div class="card bg-dark text-light border-secondary mb-4">
  <div class="card-body">
    <h3 class="card-title">
      Visuals
      <span class="badge <%= visual_report[:score] == 'A' ? 'bg-success' : 'bg-warning' %>">
        Score: <%= visual_report[:score] %>
      </span>
    </h3>

    <div class="content-section">
      <div class="row">
        <div class="col-md-6">
          <h5 class="text-primary">Screenshots</h5>
          <p class="mb-2">
            <i class="fas fa-image"></i>
            <%= @game_data['screenshots']&.size || 0 %> screenshots uploaded
          </p>
          <% if visual_report[:issues].any? { |i| i.include?('screenshot') } %>
            <div class="text-warning">
              <i class="fas fa-exclamation-circle"></i>
              <small>
                <% visual_report[:issues].select { |i| i.include?('screenshot') }.each do |issue| %>
                  <%= issue %><br>
                <% end %>
              </small>
            </div>
          <% end %>
        </div>

        <div class="col-md-6">
          <h5 class="text-primary">Trailer</h5>
          <p class="mb-2">
            <i class="fas fa-video"></i>
            <%= @game_data['movies']&.any? ? 'Trailer available' : 'No trailer uploaded' %>
          </p>
          <% if visual_report[:issues].any? { |i| i.include?('trailer') } %>
            <div class="text-warning">
              <i class="fas fa-exclamation-circle"></i>
              <small>
                <% visual_report[:issues].select { |i| i.include?('trailer') }.each do |issue| %>
                  <%= issue %><br>
                <% end %>
              </small>
            </div>
          <% end %>
        </div>
      </div>

      <div class="mt-3">
        <i class="fas fa-lightbulb text-warning"></i>
        <strong>Recommendations:</strong> Ensure you have at least <%= VisualAnalyzer::MIN_SCREENSHOTS %> high-quality screenshots and a compelling trailer video.
      </div>
    </div>
  </div>
</div> 
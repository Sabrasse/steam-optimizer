<!-- app/views/pages/_description_section.html.erb -->
<div class="card bg-dark text-light border-secondary mb-4">
  <div class="card-body">
    <h3 class="card-title">
      Description 
      <span class="badge <%= text_report[:score] == 'A' ? 'bg-success' : 'bg-warning' %>">
        Score: <%= text_report[:score] %>
      </span>
    </h3>

    <div class="content-section">
      <h5 class="text-primary">Current Content</h5>
      
      <div class="mb-4">
        <h6>Short Description:</h6>
        <p class="mb-2"><%= @game_data['short_description'] || '(No short description provided)' %></p>
        <% if text_report[:issues].any? { |i| i.include?('short description') } %>
          <div class="text-warning">
            <i class="fas fa-exclamation-circle"></i>
            <small>
              <% text_report[:issues].select { |i| i.include?('short description') }.each do |issue| %>
                <%= issue %><br>
              <% end %>
            </small>
          </div>
        <% end %>
      </div>

      <div class="mb-4">
        <h6>About the Game:</h6>
        <p class="mb-2"><%= @game_data['about_the_game'] || '(No description provided)' %></p>
        <% if text_report[:issues].any? { |i| i.include?('paragraph') || i.include?('feature list') } %>
          <div class="text-warning">
            <i class="fas fa-exclamation-circle"></i>
            <small>
              <% text_report[:issues].select { |i| i.include?('paragraph') || i.include?('feature list') }.each do |issue| %>
                <%= issue %><br>
              <% end %>
            </small>
          </div>
        <% end %>
      </div>
    </div>

    <%# AI suggestions for improving text %>
    <div class="mt-4">
      <h5 class="border-bottom border-secondary pb-2">AI Suggestions for Text Improvements:</h5>
      <div class="card bg-darker text-light border-secondary">
        <div class="card-body">
          <% if ai_suggestions[:short_description] %>
            <div class="mb-3">
              <h6 class="text-primary">Revised Short Description:</h6>
              <p class="mb-0"><%= ai_suggestions[:short_description] %></p>
            </div>
          <% end %>

          <% if ai_suggestions[:first_paragraph] %>
            <div class="mb-3">
              <h6 class="text-primary">Improved Introduction:</h6>
              <p class="mb-0"><%= ai_suggestions[:first_paragraph] %></p>
            </div>
          <% end %>

          <% if ai_suggestions[:feature_list] && ai_suggestions[:feature_list].any? %>
            <div>
              <h6 class="text-primary">Suggested Feature List:</h6>
              <ul class="mb-0">
                <% ai_suggestions[:feature_list].each do |feature| %>
                  <li><%= feature %></li>
                <% end %>
              </ul>
            </div>
          <% end %>
        </div>
      </div>
      <small class="text-muted mt-2 d-block">
        <i class="fas fa-robot"></i> These suggestions are generated by AI based on your current description.
      </small>
    </div>
  </div>
</div> 
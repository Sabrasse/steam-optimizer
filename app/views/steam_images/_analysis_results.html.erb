<div class="image-analysis-results">
  <% if @suggestions.present? %>
    <div class="card mb-4">
      <div class="card-header">
        <h5 class="mb-0">Image Improvement Suggestions</h5>
      </div>
      <div class="card-body">
        <%= simple_format(@suggestions) %>
      </div>
    </div>
  <% end %>

  <% if @validation.present? %>
    <div class="card">
      <div class="card-header">
        <h5 class="mb-0">Image Validation Report</h5>
      </div>
      <div class="card-body">
        <%= simple_format(@validation) %>
      </div>
    </div>
  <% end %>

  <% if @suggestions.nil? && @validation.nil? %>
    <div class="alert alert-warning">
      Unable to analyze the image. Please make sure the image URL is valid and accessible.
    </div>
  <% end %>
</div> 